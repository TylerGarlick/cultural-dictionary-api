{
  "extends": "@sindresorhus/tsconfig",
  "compilerOptions": {
    "allowJs": true,
    "outDir": "dist",
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
      "dom",
      "es6",
      "ES2015",
      "ES2017",
      "ES2018",
      "esnext.asynciterable"
    ]
  },
  "include": [
    "src",
    "examples",
    "docs"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
}